    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Unit Tests",
            // "program": "${workspaceFolder}/test/httptests.ts",

            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceRoot}/test/**/*.ts"],
            "cwd": "${workspaceRoot}/test",

            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/test/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Samples",
            "program": "${workspaceFolder}/samples/samples.ts",
            "preLaunchTask": "npm: samples",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/samples/**/*.js"
            ]
        }
    ]
}

